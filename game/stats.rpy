screen stats(text_size = 20):
    vbox:
        xalign 0.1
        yalign 0.1
        spacing 5
        text "{color=#fc0324}[health]HP"
        text "{color=#4dff3d}$[money]"
        text "{color=#ffffff}[attack]/5 attack"
        text "{color=#ffffff}[defence]/5 defence"
        text "{color=#30fff8}[fame] fame"
